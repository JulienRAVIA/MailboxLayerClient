{
    "name": "xylis/mailboxlayer-client",
    "description": "MailboxLayer API Client for validating emails",
    "type": "library",
    "homepage": "https://github.com/JulienRAVIA/MailboxLayerClient",
    "license": "GPL-3.0-or-later",
    "keywords": [
        "xylis",
        "julien ravia",
        "mailboxlayer",
        "mail validator"
    ],
    "require-dev": {
        "apigen/apigen": "dev-master",
        "phpunit/phpunit": "^8.3",
        "roave/better-reflection": "dev-master",
        "squizlabs/php_codesniffer": "3.*"
    },
    "authors": [
        {
            "name": "Julien RAVIA",
            "email": "julien.ravia@gmail.com",
            "homepage": "http://julienravia.fr",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Xylis\\MailboxLayer\\": "src"
        }
    },
    "require": {
        "php": "~7.1",
        "ext-curl": "*",
        "ext-json": "*",
        "jameshalsall/object-hydrator": "^1.2"
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "generate-docs": "apigen generate src --destination docs"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
